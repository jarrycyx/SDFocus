<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/drawer_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<FrameLayout
	    android:id="@+id/content_frame"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent" >

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<LinearLayout
				android:id="@+id/actionbarLinearLayout1"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:gravity="center|left"
				android:orientation="horizontal">

				<RelativeLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content">

					<TextView
						android:id="@+id/textView1_me"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginLeft="15dp"
						android:background="@drawable/more"/>

					<TextView
						android:id="@+id/textView1_jingxuan"
						android:layout_width="wrap_content"
						android:layout_height="30dp"
						android:text="动态"
						android:layout_toRightOf="@+id/textView1_me"
						android:layout_alignBottom="@+id/textView1_me"
						android:layout_marginLeft="15dp"
						android:textSize="20sp"/>



				</RelativeLayout>	

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_marginTop="50dp"
				android:orientation="vertical"
				android:layout_height="match_parent"
				android:layout_weight="10"/>

		</RelativeLayout>

	</FrameLayout>

	<RelativeLayout
		android:id="@+id/left_drawer"
		android:layout_width="228dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="#E0E0E0">

		<ScrollView
			android:layout_height="match_parent"
			android:layout_width="match_parent">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical">

				<RelativeLayout
					android:layout_height="220dp"
					android:layout_width="match_parent">

					<ImageView
						android:layout_height="75dp"
						android:layout_width="75dp"
						android:layout_centerInParent="false"
						android:layout_centerHorizontal="true"
						android:layout_marginTop="55dp"
						android:src="@drawable/document"
						android:id="@+id/testImageView1">

					</ImageView>

					<TextView
						android:layout_height="wrap_content"
						android:text="未登录"
						android:layout_width="wrap_content"
						android:layout_centerHorizontal="true"
						android:layout_marginTop="135dp"
						android:id="@+id/mainIdTextView1"
						android:textSize="16sp"/>

					<TextView
						android:layout_height="wrap_content"
						android:text="积分: 0"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:layout_width="wrap_content"
						android:layout_centerHorizontal="true"
						android:layout_marginTop="160dp"
						android:id="@+id/mainScoreTextView1"/>

				</RelativeLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="vertical">

					<LinearLayout
						android:layout_height="35dp"
						android:layout_width="220dp"
						android:orientation="horizontal"
						android:onClick="onMainClick"
						android:layout_marginTop="2dp"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp"
						android:layout_marginBottom="2dp"
						android:background="@drawable/item_click"
						android:gravity="left|center">

						<TextView
							android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:layout_width="wrap_content"
							android:text="主页"
							android:layout_marginLeft="50dp"
							android:textSize="20sp"/>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="vertical">

					<LinearLayout
						android:layout_height="35dp"
						android:layout_width="220dp"
						android:orientation="horizontal"
						android:onClick="onhuodongClick"
						android:layout_marginTop="2dp"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp"
						android:layout_marginBottom="2dp"
						android:background="@drawable/item_click"
						android:gravity="left|center">

						<TextView
							android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:layout_width="wrap_content"
							android:text="近期活动"
							android:layout_marginLeft="50dp"
							android:textSize="20sp"/>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="vertical">

					<LinearLayout
						android:layout_height="35dp"
						android:layout_width="220dp"
						android:orientation="horizontal"
						android:onClick="onFeedBackClick"
						android:layout_marginTop="2dp"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp"
						android:layout_marginBottom="2dp"
						android:background="@drawable/item_click"
						android:gravity="left|center">

						<TextView
							android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:layout_width="wrap_content"
							android:text="反馈"
							android:layout_marginLeft="50dp"
							android:textSize="20sp"/>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="vertical">

					<LinearLayout
						android:layout_height="35dp"
						android:layout_width="220dp"
						android:orientation="horizontal"
						android:onClick="onSearchClick"
						android:layout_marginTop="2dp"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp"
						android:layout_marginBottom="2dp"
						android:background="@drawable/item_click"
						android:gravity="left|center">

						<TextView
							android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:layout_width="wrap_content"
							android:text="搜索"
							android:layout_marginLeft="50dp"
							android:textSize="20sp"/>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="vertical">

					<LinearLayout
						android:layout_height="35dp"
						android:layout_width="220dp"
						android:orientation="horizontal"
						android:onClick="onInformationClick"
						android:layout_marginTop="2dp"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp"
						android:layout_marginBottom="2dp"
						android:background="@drawable/item_click"
						android:gravity="left|center">

						<TextView
							android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:layout_width="wrap_content"
							android:text="关于"
							android:layout_marginLeft="50dp"
							android:textSize="20sp"/>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="vertical">

					<LinearLayout
						android:layout_height="35dp"
						android:layout_width="220dp"
						android:orientation="horizontal"
						android:onClick="onSetClick"
						android:layout_marginTop="2dp"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp"
						android:layout_marginBottom="2dp"
						android:background="@drawable/item_click"
						android:gravity="left|center">

						<TextView
							android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:layout_width="wrap_content"
							android:text="设置"
							android:layout_marginLeft="50dp"
							android:textSize="20sp"/>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="vertical">

					<LinearLayout
						android:layout_height="35dp"
						android:layout_width="220dp"
						android:orientation="horizontal"
						android:onClick="onLogOutClick"
						android:layout_marginTop="2dp"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp"
						android:layout_marginBottom="2dp"
						android:background="@drawable/item_click"
						android:gravity="left|center">

						<TextView
							android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:layout_width="wrap_content"
							android:text="退出登陆"
							android:layout_marginLeft="50dp"
							android:textSize="20sp"/>

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

		</ScrollView>

	</RelativeLayout>
	

</android.support.v4.widget.DrawerLayout>

